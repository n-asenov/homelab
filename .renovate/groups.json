{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": ["Flux Operator Group"],
      "matchDatasources": ["docker"],
      "matchDepNames": ["flux-operator", "flux-instance"],
      "groupName": "Flux-Operator"
    },
    {
      "description": ["Intel Device Plugins Group"],
      "matchDatasources": ["helm"],
      "matchDepNames": ["intel-device-plugins-operator", "intel-device-plugins-gpu"],
      "groupName": "Intel-Device-Plugins"
    },
    {
      "description": ["Rook-Ceph Group"],
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ghcr.io/rook/rook-ceph", "ghcr.io/rook/rook-ceph-cluster"],
      "groupName": "Rook-Ceph"
    },
    {
      "description": ["Prometheus Operator CRDs Group"],
      "matchDatasources": ["docker", "helm"],
      "matchPackageNames": ["ghcr.io/prometheus-community/charts/prometheus-operator-crds", "prometheus-operator-crds"],
      "groupName": "Prometheus-Operator-CRDs"
    }
  ]
}
